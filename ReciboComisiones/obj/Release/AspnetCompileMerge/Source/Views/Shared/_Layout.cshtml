<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Grupo HI-TEC</title>
    @Styles.Render("~/Content/css")
    @Styles.Render("~/Content/jquery-toast")
    @Scripts.Render("~/bundles/modernizr")
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/jquery-toast")
    @Scripts.Render("~/bundles/bootstrap")
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <a href="#" class="navbar-brand">
                    Recibos de Comisiones (Usuario: @((string)ViewBag.UserName))
                </a>
            </div>
            <ul class="nav navbar-nav navbar-right">
                <li>
                    <button class="btn btn-sm btn-default" style="margin-top: 10px; margin-bottom: 2px;" onclick="window.open('@Url.Action("Ayuda", "Home")');">
                        <span class="glyphicon glyphicon-question-sign"></span> Ayuda
                    </button>
                </li>
            </ul>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        @Html.Partial("Modal")
    </div>
    <hr />
    <footer>
        <p>&copy; @DateTime.Now.Year - Grupo HI-TEC</p>
    </footer>

    @RenderSection("scripts", required: false)
</body>
</html>